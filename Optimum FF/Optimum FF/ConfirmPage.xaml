<Page x:Class="Optimum_FF.ConfirmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Optimum_FF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmPage">

    <StackPanel VerticalAlignment="Center">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Would you like to update stats?" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="yes_button" HorizontalAlignment="Center" Width="100px" Height="50px" Margin="0,15,0,10" FontWeight="Bold" FontSize="20" Click="yes_button_Click">Yes</Button>
        <Button x:Name="no_button" HorizontalAlignment="Center" Width="100px" Height="50px" Margin="0,10,0,0" FontWeight="Bold" FontSize="20" Click="no_button_Click">No</Button>
    </StackPanel>
</Page>
