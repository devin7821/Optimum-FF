<Page x:Class="Optimum_FF.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Optimum_FF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <ScrollViewer>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontWeight="Bold" FontSize="35">Settings</Label>
            <ComboBox x:Name="LeagueTypeSelection" HorizontalAlignment="Center" Width="200">
                <ComboBoxItem Content="Standard"></ComboBoxItem>
                <ComboBoxItem Content="PPR"></ComboBoxItem>
            </ComboBox>
            <Label HorizontalAlignment="center" Margin="0 10 300 0">QB Starters:</Label>
            <ComboBox x:Name="QBCountSelection" HorizontalAlignment="Center" Width="200" Margin="0 -23 0 10">
                <ComboBoxItem Content="1"></ComboBoxItem>
                <ComboBoxItem Content="2"></ComboBoxItem>
                <ComboBoxItem Content="3"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </ScrollViewer>
</Page>
