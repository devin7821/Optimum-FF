<Page x:Class="Optimum_FF.ScrapingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Optimum_FF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScrapingPage"
      Loaded="OnScrapingPageLoaded">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock FontWeight="Bold" FontSize="24" Text="Updating Stats..."></TextBlock>
        <fa:FontAwesome Icon="Spinner" Spin="True" SpinDuration="4" Margin="0,10,0,0"/>
    </StackPanel>
</Page>
